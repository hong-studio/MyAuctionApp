<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        app:title="마이경매"
        android:background="@color/mainTheme"/>

    <RelativeLayout
        android:id="@+id/layout_profile"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/toolbar"
        android:background="@drawable/bg_ripple">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_tab4"
            android:scaleType="centerCrop"
            android:layout_margin="16dp"/>
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="24sp"
            android:textColor="#FF333333"
            android:layout_toRightOf="@id/iv_profile"
            android:layout_alignTop="@id/iv_profile"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFDDDDDD"
        android:layout_below="@id/layout_profile"/>
    <TextView
        android:id="@+id/tv01_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내 계좌"
        android:layout_below="@id/line1"
        android:textSize="16sp"
        android:textColor="#FF333333"
        android:padding="16dp"
        android:background="@drawable/bg_ripple"/>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFDDDDDD"
        android:layout_below="@id/tv01_member"/>
    <TextView
        android:id="@+id/tv02_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="앱 설정"
        android:layout_below="@id/line2"
        android:textSize="16sp"
        android:textColor="#FF333333"
        android:padding="16dp"
        android:background="@drawable/bg_ripple"/>
    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFDDDDDD"
        android:layout_below="@id/tv02_member"/>
    <TextView
        android:id="@+id/tv03_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="고객센터"
        android:layout_below="@id/line3"
        android:textSize="16sp"
        android:textColor="#FF333333"
        android:padding="16dp"
        android:background="@drawable/bg_ripple"/>
    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFDDDDDD"
        android:layout_below="@id/tv03_member"/>
    <TextView
        android:id="@+id/tv04_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:layout_below="@id/line4"
        android:textSize="16sp"
        android:textColor="#FF333333"
        android:padding="16dp"
        android:background="@drawable/bg_ripple"/>
    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFDDDDDD"
        android:layout_below="@id/tv04_member"/>
    <TextView
        android:id="@+id/tv05_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원탈퇴"
        android:layout_below="@id/line5"
        android:textSize="16sp"
        android:textColor="#FF333333"
        android:padding="16dp"
        android:background="@drawable/bg_ripple"/>
    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFDDDDDD"
        android:layout_below="@id/tv05_member"/>

</RelativeLayout>
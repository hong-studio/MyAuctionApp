<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_productImg"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/img01"
        android:scaleType="centerCrop"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/tv_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스웨터"
        android:textSize="20sp"
        android:textColor="#FF333333"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/iv_productImg"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/tv_memberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록자1"
        android:textSize="16sp"
        android:textColor="#FF333333"
        android:layout_toRightOf="@id/iv_productImg"
        android:layout_below="@id/tv_productName"
        android:paddingLeft="8dp"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30:02"
        android:textSize="16sp"
        android:textColor="#FFFF0000"
        android:layout_below="@id/tv_memberName"
        android:layout_alignLeft="@id/tv_memberName"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"/>
    <ImageView
        android:id="@+id/iv_favor"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_heart_border"
        android:layout_alignBottom="@id/iv_productImg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFDDDDDD"
        android:layout_below="@id/iv_productImg"/>

</RelativeLayout>